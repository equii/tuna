extends layout

block content
  br
  p To login, please enter your credentials

  div.loginbox
    form(name="login", action="/login", method="post")
      input(type="text", class='inputbox', name="username", placeholder='Username')
      br
      input(type="password", class='inputbox', name="password", placeholder='Password')
      br
      input(type="submit", class='mac_button', value="Login")

  p Custom message: #{msg}